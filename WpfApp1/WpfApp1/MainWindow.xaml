<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
       Title="美团数据生成" Height="580" Width="850">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Background="DarkSeaGreen" VerticalAlignment="Top" Grid.Column="0" Grid.Row="0" >
            <Menu DockPanel.Dock="Top" Background="DarkSeaGreen" Margin="5">
                <MenuItem Header="今天" FontSize="12" x:Name="datebuton"  FontWeight="Black" Click="datebuton_Click" />
                <MenuItem Header="上月" FontSize="12" x:Name="datebuton1"  FontWeight="Black" Click="datebuton1_Click"/>
                <MenuItem Header="本月" FontSize="12" x:Name="datebuton2" FontWeight="Black" Click="datebuton2_Click"/>
            </Menu>

        </DockPanel>

        <DockPanel Background="DarkSeaGreen" VerticalAlignment="Center" Grid.Column="1" Height="27" >
            <Grid Background="DarkSeaGreen"  Margin="5">
                <CheckBox x:Name="Check"  Content="启用执行按钮" Click="CheckBox_Click"/>
            </Grid>

        </DockPanel>

        <StackPanel   Grid.Row="1" Grid.Column="0" Background="#CCFF8153" >
            <Label x:Name="base" HorizontalContentAlignment="Center" FontWeight="Black" Content="基础资料获取&#x0a;" Margin="5" FontSize="18" Height="34" ></Label>

            
            <Button x:Name="baseDownLoadButton"  Content="获取数据" Height="26"  Margin="85,5,20,5" Click="BaseDownLoad_Click"/>
            <Button x:Name="baseUpLoadButton"  Content="生成数据" Height="26"  Margin="85,5,20,5"  Click="BaseUpLoad_Click" />

            <Grid Margin="5" Height="40">
                <Label x:Name="result0"   FontWeight="Black" Content="执行结果:"/>
                <TextBox x:Name="BaseResult" Margin="80,5,15,5"  FontSize="12" IsReadOnly="True" TextWrapping="Wrap"  VerticalScrollBarVisibility="Auto"/>
            </Grid>

        </StackPanel>

        <StackPanel   Grid.Row="1" Grid.Column="1" Background="Gray" >
        </StackPanel>


        <StackPanel   Grid.Row="2" Grid.Column="0" Background="#CCFF8153" >
            <Label x:Name="order" HorizontalContentAlignment="Center" FontWeight="Black" Content="采购订单获取&#x0a;" Margin="5" FontSize="18" Height="34" ></Label>

            <Grid Margin="5">
                <Label x:Name="beginText"   FontWeight="Black" Content="开始日期:"></Label>
                <DatePicker x:Name="orderbeginDate"  Margin="80,0,15,0" />
            </Grid>
            <Grid Margin="5">
                <Label x:Name="endText"   FontWeight="Black" Content="结束日期:"></Label>
                <DatePicker  x:Name="orderendDate"  Margin="80,0,15,0"/>
            </Grid>

            <Button x:Name="OrderDownLoadButton"  Content="获取数据" Height="26"  Margin="85,5,20,5" Click="OrderDownLoad_Click"/>
            <Button x:Name="OrderUpLoadButton"  Content="生成数据" Height="26"  Margin="85,5,20,5"  Click="OrderUpLoad_Click" />

            <Grid Margin="5" Height="140">
                <Label x:Name="result"   FontWeight="Black" Content="执行结果:"/>
                <TextBox x:Name="OrderResult" Margin="80,5,15,5"  FontSize="12" IsReadOnly="True" TextWrapping="Wrap"  VerticalScrollBarVisibility="Auto"/>
            </Grid>

        </StackPanel>

        <StackPanel  Grid.Row="2" Grid.Column="1" Background="#CC7474BF" >
            <Label x:Name="stock"  HorizontalContentAlignment="Center" FontWeight="Black" Content="出入库获取&#x0a;" Margin="5" FontSize="18" Height="34"></Label>
            <Grid Margin="5">
                <Label x:Name="beginText1"   FontWeight="Black" Content="开始日期:"></Label>
                <DatePicker  x:Name="stockbeginDate"  Margin="80,0,15,0"/>
            </Grid>
            <Grid Margin="5">
                <Label x:Name="endText1"   FontWeight="Black" Content="结束日期:"></Label>
                <DatePicker  x:Name="stockendDate"  Margin="80,0,15,0"/>
            </Grid>
            <Button  x:Name="StockDownLoadButton"  Content="获取数据" Height="26"  Margin="85,5,20,5" Click="StockDownLoad_Click"/>
            <Button  x:Name="StockUpLoadButton"  Content="生成数据" Height="26"  Margin="85,5,20,5"  Click="StockUpLoad_Click"/>
            <Grid Margin="5"  Height="140">
                <Label x:Name="result1"   FontWeight="Black" Content="执行结果:"/>
                <TextBox x:Name="StockResult"  Margin="80,5,15,5" FontSize="12" IsReadOnly="True"  TextWrapping="Wrap"   VerticalScrollBarVisibility="Visible"/>
            </Grid>
        </StackPanel>




    </Grid>
</Window>
